<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark">

    <!-- ================= SIDEBAR ================= -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#14141B"
        android:paddingTop="40dp"
        android:paddingHorizontal="16dp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portal"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="40dp"/>

        <!-- Navigation Items -->
        <TextView
            android:id="@+id/navDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#6C63FF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/navAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/navSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/navLeave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/navSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Push logout to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/navLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#E57373"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingVertical="12dp"/>

    </LinearLayout>


    <!-- ================= MAIN CONTENT ================= -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Circle -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="60dp"
                app:cardElevation="12dp"
                app:strokeColor="#2A2A35"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#1C1C24">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerCrop"/>

            </com.google.android.material.card.MaterialCardView>


            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp"/>


            <!-- Announcement Box -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#18181F"
                app:strokeColor="#2A2A35"
                app:strokeWidth="1dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Announcements"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Company meeting at 3PM&#10;• Payroll processing this Friday&#10;• System maintenance on Sunday&#10;• New HR policy update&#10;• Performance review next week&#10;• Training session Monday"
                            android:textColor="#B0B0B0"
                            android:layout_marginTop="12dp"/>

                    </LinearLayout>

                </ScrollView>

            </com.google.android.material.card.MaterialCardView>


            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>


            <!-- Activity Log Box -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#18181F"
                app:strokeColor="#2A2A35"
                app:strokeWidth="1dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Activity Log"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Logged in - 08:00 AM&#10;• Submitted leave request&#10;• Updated profile information&#10;• Logged out - 05:10 PM&#10;• Logged in - 08:02 AM&#10;• Checked attendance"
                            android:textColor="#B0B0B0"
                            android:layout_marginTop="12dp"/>

                    </LinearLayout>

                </ScrollView>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>